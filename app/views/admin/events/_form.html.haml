
- if @event.errors.any?
  %ul
    - @event.errors.full_messages.each do |message|
      %li= message


= simple_form_for [:admin, @event] do |f|

  = f.association :creator
  = f.input :title
  = f.input :status, as: :radio_buttons
  = f.input :content
  = f.input :tag_list, as: :check_boxes, collection: Tag.all, value_method: :name

  = f.simple_fields_for :event_dates do |e|
    - this_year = Time.now.year

    %lable
      開催期間
      &mdash;
      削除
      = e.check_box :_destroy

    .form-duration-inline
      開始日時
      = e.datetime_select :begin_at, minute_step: 10, include_blank: true, use_month_numbers: true, start_year: this_year
    .form-duration-inline
      終了日時
      = e.datetime_select :end_at, minute_step: 10, include_blank: true, use_month_numbers: true, start_year: this_year


  = f.button :submit

