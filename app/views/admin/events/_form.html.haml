
- if @event.errors.any?
  %ul
    - @event.errors.full_messages.each do |message|
      %li= message


= simple_form_for [:admin, @event] do |f|

  = f.association :creator
  = f.input :title
  = f.input :status, as: :radio_buttons
  = f.input :content
  = f.input :tag_list, as: :check_boxes, collection: Tag.all, value_method: :name

  = f.button :submit

